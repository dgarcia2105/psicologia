@model MM.CAAM.Gestion.DTO.DTOs.UsuarioDTO

<div class="row">
    <div class="col-2">
        <div><span>@Model.Position) </span>
            <a class="pe-3" title="Historial" href="~/Consulta/ConsultaDeUsuario/?UsuarioId=@Com.Encryptor(Model.Id.ToString())">
                @*<i class="fa-solid fa-magnifying-glass"></i>*@
                @Model.NombreCompleto
            </a>
        </div>
        <div class="float-end">
                @*<a class="pe-3" title="Historial" href="~/Consulta/ConsultaDeUsuario/?UsuarioId=@Model.Id"><i class="fa-solid fa-magnifying-glass"></i></a>*@
                @*<a class="" title="Agregar consulta" href="~/Consulta/NuevaConsulta/?UsuarioId=@Model.Id"><i class="fa-solid fa-plus"></i></a>*@
        </div>
    </div>
    <div class="col-2">@Model.Correo</div>
    <div class="col-1">
        @if (Model.Genero != null)
        {
            <span>@Model.Genero.Descripcion</span>
        }
        
        </div>
    <div class="col-1" title="Fecha de nacimiento: @Model.FechaNacimiento.ToString("MM-dd-yyyy")">
        @if (Model.FechaNacimiento != DateTime.MinValue)
            @Model.TiempoNacimiento
    </div>
    <div class="col-2">@Model.Nacionalidad</div>
    <div class="col-1">@Model.Telefono</div>
    <div class="col-2">@Model.Ocupacion</div>
    <div class="col-1">@Model.FechaCreacion</div>
</div>
