<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" /> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["MetaDescripcion"]">
    <meta name="keywords" content="@ViewData["MetaKeywords"]">
    <meta name="author" content="@ViewData["MetaAuthor"]">

    <link rel="shortcut icon" href="~/images/medico/logo_caam_colores_192_2.png" />
    <link rel="icon" sizes="192x192" href="~/images/medico/logo_caam_colores_192_2.png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/MM.CAAM.Admin.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/sidebars.css" />*@
    <link rel="stylesheet" href="~/sweetalert2/sweetalert2.css" />                          @*https://sweetalert2.github.io/#examples*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/public/home.css" asp-append-version="true" />
</head>
<body>
    <div id="transparencia">capa transparente</div>
    <div id="panel_loading">
        <div id="imagen" class="fg-darkOrange text-center">
            <center>
                <img src="~/images/loader.gif" />
                <h2>Procesando...</h2>
            </center>
        </div>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-white border-bottom box-shadow mb-3 navbar-dark">
            @*navbar-light*@
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/medico/logo_caam_navbar@300x.png" alt="Avatar Logo" style="width:71px;"> @*class="rounded-pill"*@
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                    </ul>
                    <div class="d-flex">
                        @*<button type="button" class="btn ">Primary</button>*@
                        <button class=" btn btn-default bg-white text-dark" href="~/Home/Login">Crear cuenta</button>
                    </div>
                    <div class="d-flex">
                        <a class="nav-link btn" href="~/Home/Login">Iniciar sesión</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @*class="container-fluid"*@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MM.CAAM.Admin.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    @*TODO CHANGE JQUERY*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/sweetalert2/sweetalert2.js"></script>                                                                @*https://sweetalert2.github.io/#examples*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
